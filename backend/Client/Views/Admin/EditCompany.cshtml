@model Client.Models.CompanyDetail
<div class="wrapper">
    <partial name="../Shared/_NavbarAdmin.cshtml" />
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Update Company</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <form asp-action="EditCompany" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary" style="background-color: #f5f5f5">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">Company name</label>
                                    <input type="text" asp-for="CompanyName" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Address</label>
                                    <input type="text" asp-for="Address" id="inputName" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-secondary" style="background-color: #f5f5f5">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputDescription">Phone</label>
                                    <input type="text" asp-for="Phone" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Company Url</label>
                                    <select id="inputStatus" name="CompanyId" class="form-control custom-select">
                                        <option selected disabled>Select one</option>
                                        @foreach (var item in ViewData["company"] as IList<CompanyDetail>)
                                        {
                                            <option value="@item.Id">@item.CompanyName.</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-success float-right">Update Company</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>