@model IEnumerable<Client.Models.Employee>
<partial name="../Shared/_NavbarAdmin.cshtml" />
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Employees</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">
                            <a class="btn btn-success" asp-controller="Admin" asp-action="AddEmp">Add</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <div class="row">
        <div class="col-5">
            <div class="p-2 form-search">
                <div class="search-hp">
                    <form asp-action="EmpList" method="get">
                        <p class="search-title">Search Name</p>
                        <input type="text" name="searchname" class="search" />
                        <button type="submit" class="btn-search"><i class="fas fa-search fa-fw"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Employees</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width:5%;">
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Roles
                            </th>
                            <th>
                                Image
                            </th>
                            <th style="width: 15%" class="text-center">
                                Acction
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td class="text-left">
                                @item.EmpId
                            </td>
                            <td class="text-left">
                                @item.Lname @item.Fname
                            </td>
                            <td class="project_progress text-left">
                                @item.Phone
                            </td>
                            <td class="project-state text-left">
                                @item.Address
                            </td>
                            <td class="project-state text-left">
                                @item.Email
                            </td>
                            @if (@item.IsAdmin == 1)
                            {
                                <td class="project-state text-left">
                                    Admin
                                </td>
                            }
                            else
                            {
                                <td class="project-state text-left">
                                    User
                                </td>
                            }
                            <td class="project-state text-left">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="~/@item.Image">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-actions text-left">
                                <a class="btn btn-primary btn-sm" href="/Admin/ViewEmp/@item.EmpId">
                                    <i class="fas fa-eye">
                                    </i>
                                    View
                                </a>
                                @if (@item.IsAdmin != 1)
                                {

                                <a class="btn btn-danger btn-sm" href="/Admin/DelEmp/@item.EmpId">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                                }

                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>