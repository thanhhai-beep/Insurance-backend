@model IEnumerable<Client.Models.CompanyDetail>
@ViewBag.Mess
<div class="wrapper">
    <partial name="../Shared/_NavbarAdmin.cshtml" />
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Employee Add</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <form asp-action="AddEmp" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary" style="background-color: #f5f5f5">
                            <div class="card-header">
                                <h3 class="card-title">General</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">First name</label>
                                    <input type="text" name="Fname" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Last name</label>
                                    <input type="text" name="Lname" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Phone</label>
                                    <input type="text" name="Phone" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Address</label>
                                    <input type="text" name="Address" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Email</label>
                                    <input type="text" name="Email" id="inputName" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-secondary" style="background-color: #f5f5f5">
                            <div class="card-header">
                                <h3 class="card-title">Budget</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">Stast sate</label>
                                    <input type="date" name="Startdate" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">End sate</label>
                                    <input type="date" name="Enddate" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputStatus">Company</label>
                                    <select id="inputStatus" name="CompanyId" class="form-control custom-select">
                                        <option selected disabled>Select one</option>
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.Id">@item.CompanyName.</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Image</label>
                                    <input type="file" name="Image" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">IsAdmin</label>
                                    <input type="checkbox" name="IsAdmin" value="true" class="form-control" />
                                    <input type="hidden" name="IsAdmin" value="false" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-11">
                        <button type="submit" class="btn btn-success float-right">Create new Employee</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>