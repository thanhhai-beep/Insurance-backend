@model Client.Models.Employee
@ViewBag.Mess 
<div class="wrapper">
    <partial name="../Shared/_NavbarAdmin.cshtml" />
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Update Employee</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <form asp-action="EditEmp" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="inputName">First name</label>
                                    <input type="text" asp-for="Fname" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Last name</label>
                                    <input type="text" asp-for="Lname" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Phone</label>
                                    <input type="text" asp-for="Phone" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Email</label>
                                    <input type="text" asp-for="Email" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Password</label>
                                    <input type="password" asp-for="Password" id="inputName" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="inputName">Address</label>
                                        <input type="text" asp-for="Address" id="inputName" class="form-control">
                                    </div>
                                    <label for="inputName">Policy Id</label>
                                    <input type="text" asp-for="PolicyId" id="inputName" class="form-control" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Stast sate</label>
                                    <input type="date" asp-for="Startdate" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">End sate</label>
                                    <input type="date" asp-for="Enddate" id="inputName" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Company Id</label>
                                    <input type="text" asp-for="CompanyId" id="inputName" class="form-control" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Image</label>
                                    <input type="file" asp-for="Image"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4"></div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-success float-right">Update Employee</button>
                        </div>
                </div>
                    
            </form>
        </section>
    </div>
</div>