@model Client.Models.UserLogin
@ViewBag.mess
<div class="row">
    <div class="col-3 col-md-4 col-lg-4"></div>
    <div class="col-6 col-md-4 col-lg-3">
        @ViewBag.mess
        <form asp-action="Login" method="post" class="form-login">
            <div class="container">
                <h1 class="text-center">Login</h1>
                <hr>
                <label for="email"><b>UesrName</b></label>
                <input type="text" asp-for="Username" name="username" required />
                <label for="psw"><b>Password</b></label>
                <input type="password" name="password" />
                <label>
                    <input type="checkbox" checked="checked" name="remem" value="true" style="margin-bottom:15px">
                    <input type="hidden" name="remem" value="false" />Remember
                </label>
                <div class="clearfix">
                    <button type="submit" class="signupbtn">Login</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 col-md-4 col-lg-4"></div>
</div>