@using Newtonsoft.Json;
@model Client.Models.Employee
<div class="wrapper">
    <partial name="../Shared/_NavbarAdmin.cshtml" />
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 style="font-size:45px;">User Profile</h1>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile PrIP">
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle"
                                             src="~/@Model.Image"
                                             alt="User profile picture">
                                    </div>
                                    <h3 class="profile-username text-center">@Model.Fname @Model.Lname</h3>
                                    <p class="text-muted text-center">@Model.Email</p>
                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Phone</b> <a class="float-right">@Model.Phone</a>
                                    </li>
                                    <li class="list-group-item">
                                        <b>Address</b> <a class="float-right">@Model.Address</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>