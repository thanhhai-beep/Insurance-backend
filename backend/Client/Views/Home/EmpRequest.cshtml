<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Request</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <form asp-action="AddHp" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputDescription">Employee</label>
                                <input type="hidden" name="RequestDate" value="" id="inputName" class="form-control">
                                <input type="hidden" name="Status" value="false" id="inputName" class="form-control">
                                <input type="text" name="EmpId" id="inputName" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Policy</label>
                                <select id="inputStatus" name="PolicyId" class="form-control custom-select">
                                    @foreach (var policy in ViewData["policy"] as IList<Policy>)
                                    {
                                        <option value="@policy.Id">@policy.PolicyName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="inputName">Company</label>
                                <select id="inputStatus" name="CompanyId" class="form-control custom-select">
                                    @foreach (var cp in ViewData["company"] as IList<CompanyDetail>)
                                    {
                                        <option value="@cp.Id">@cp.CompanyName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-11">
                    <button type="submit" class="btn btn-success float-right">Send Request</button>
                </div>
            </div>
        </form>
    </section>
</div>